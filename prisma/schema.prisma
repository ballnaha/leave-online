generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id                 Int                @id @default(autoincrement())
  employeeId         String             @unique
  email              String?            @unique
  password           String
  firstName          String
  lastName           String
  gender             String
  avatar             String?            @db.VarChar(500)
  company            String
  employeeType       String
  department         String
  section            String?
  shift              String?
  startDate          DateTime
  role               UserRole           @default(employee)
  isActive           Boolean            @default(true)
  createdAt          DateTime           @default(now())
  updatedAt          DateTime           @updatedAt
  position           String?
  managedDepartments String?            @db.Text
  managedSections    String?            @db.Text
  leaveApprovals     LeaveApproval[]
  leaveRequests      LeaveRequest[]
  notifications      NotificationLog[]
  sessions           Session[]
  approverFlows      UserApprovalFlow[] @relation("ApproverFlow")
  approvalFlows      UserApprovalFlow[] @relation("UserApprovalFlow")
  devices            UserDevice[]

  @@map("users")
}

model Session {
  id           Int      @id @default(autoincrement())
  sessionToken String   @unique
  userId       Int
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId], map: "sessions_userId_fkey")
  @@map("sessions")
}

model LeaveRequest {
  id                 Int               @id @default(autoincrement())
  leaveCode          String?           @unique
  userId             Int
  leaveType          String
  startDate          DateTime
  endDate            DateTime
  totalDays          Float
  reason             String            @db.Text
  status             String            @default("pending")
  rejectReason       String?           @db.Text
  cancelReason       String?           @db.Text
  cancelledAt        DateTime?
  createdAt          DateTime          @default(now())
  updatedAt          DateTime          @updatedAt
  contactAddress     String?           @db.Text
  contactPhone       String?
  endTime            String?
  startTime          String?
  currentLevel       Int               @default(1)
  escalationDeadline DateTime?
  finalApprovedAt    DateTime?
  finalApprovedBy    Int?
  finalRejectedAt    DateTime?
  finalRejectedBy    Int?
  isEscalated        Boolean           @default(false)
  approvals          LeaveApproval[]
  attachments        LeaveAttachment[]
  user               User              @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId], map: "leave_requests_userId_fkey")
  @@map("leave_requests")
}

model LeaveAttachment {
  id             Int          @id @default(autoincrement())
  leaveRequestId Int
  fileName       String
  filePath       String
  fileSize       Int
  mimeType       String
  createdAt      DateTime     @default(now())
  leaveRequest   LeaveRequest @relation(fields: [leaveRequestId], references: [id], onDelete: Cascade)

  @@index([leaveRequestId], map: "leave_attachments_leaveRequestId_fkey")
  @@map("leave_attachments")
}

model LeaveBalance {
  id            Int      @id @default(autoincrement())
  employeeId    String
  leaveType     String
  year          Int
  totalDays     Float
  usedDays      Float    @default(0)
  remainingDays Float
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@unique([employeeId, leaveType, year])
  @@map("leave_balances")
}

model Company {
  id        Int      @id @default(autoincrement())
  code      String   @unique
  name      String
  address   String?  @db.Text
  phone     String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("companies")
}

model Department {
  id        Int       @id @default(autoincrement())
  code      String    @unique
  name      String
  company   String
  isActive  Boolean   @default(true)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  sections  Section[]

  @@map("departments")
}

model Section {
  id           Int        @id @default(autoincrement())
  code         String     @unique
  name         String
  departmentId Int
  isActive     Boolean    @default(true)
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  department   Department @relation(fields: [departmentId], references: [id], onDelete: Cascade)

  @@index([departmentId], map: "sections_departmentId_fkey")
  @@map("sections")
}

model LeaveType {
  id             Int      @id @default(autoincrement())
  code           String   @unique
  name           String
  description    String?  @db.Text
  maxDaysPerYear Float?
  isPaid         Boolean  @default(true)
  isActive       Boolean  @default(true)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("leave_types")
}

model UserApprovalFlow {
  id         Int      @id @default(autoincrement())
  userId     Int
  level      Int
  approverId Int
  isRequired Boolean  @default(true)
  isActive   Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  approver   User     @relation("ApproverFlow", fields: [approverId], references: [id], onDelete: Cascade)
  user       User     @relation("UserApprovalFlow", fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, level])
  @@index([approverId], map: "user_approval_flows_approverId_fkey")
  @@map("user_approval_flows")
}

model LeaveApproval {
  id             Int          @id @default(autoincrement())
  leaveRequestId Int
  level          Int
  approverId     Int
  status         String       @default("pending")
  comment        String?      @db.Text
  actionAt       DateTime?
  notifiedAt     DateTime?
  reminderCount  Int          @default(0)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  approver       User         @relation(fields: [approverId], references: [id])
  leaveRequest   LeaveRequest @relation(fields: [leaveRequestId], references: [id], onDelete: Cascade)

  @@unique([leaveRequestId, level])
  @@index([approverId], map: "leave_approvals_approverId_fkey")
  @@map("leave_approvals")
}

model UserDevice {
  id         Int      @id @default(autoincrement())
  userId     Int
  playerId   String   @unique
  deviceType String
  isActive   Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId], map: "user_devices_userId_fkey")
  @@map("user_devices")
}

model NotificationLog {
  id          Int      @id @default(autoincrement())
  userId      Int
  type        String
  title       String
  message     String   @db.Text
  data        Json?
  oneSignalId String?
  status      String   @default("sent")
  isRead      Boolean  @default(false)
  readAt      DateTime?
  createdAt   DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId], map: "notification_logs_userId_fkey")
  @@map("notification_logs")
}

model ApprovalWorkflow {
  id          Int                    @id @default(autoincrement())
  name        String
  description String?
  company     String?
  department  String?
  section     String?
  isActive    Boolean                @default(true)
  createdAt   DateTime               @default(now())
  updatedAt   DateTime               @updatedAt
  steps       ApprovalWorkflowStep[]

  @@map("approval_workflows")
}

model ApprovalWorkflowStep {
  id           Int              @id @default(autoincrement())
  workflowId   Int
  level        Int
  approverRole UserRole?
  approverId   Int?
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt
  workflow     ApprovalWorkflow @relation(fields: [workflowId], references: [id], onDelete: Cascade)

  @@index([workflowId], map: "approval_workflow_steps_workflowId_fkey")
  @@map("approval_workflow_steps")
}

enum UserRole {
  employee
  shift_supervisor
  section_head
  dept_manager
  hr_manager
  admin
  hr
}

model Banner {
  id          Int       @id @default(autoincrement())
  title       String
  description String?   @db.Text
  imageUrl    String    @db.VarChar(500)
  linkUrl     String?   @db.VarChar(500)
  startDate   DateTime?
  endDate     DateTime?
  displayOrder Int      @default(0)
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("banners")
}

model Holiday {
  id          Int      @id @default(autoincrement())
  date        DateTime @db.Date
  name        String   @db.VarChar(200)  // Translation key, e.g. "new_year_day"
  type        String   @default("company") // company
  companyId   Int?     // null = apply to all companies
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([date, companyId])
  @@index([date])
  @@index([companyId])
  @@map("holidays")
}
